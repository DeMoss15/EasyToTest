<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/base_24dp</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:color">@color/colorLightText</item>
    </style>

    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:color">@color/colorCommonText</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:color">@color/colorDarkText</item>
    </style>

    <style name="CommonButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
    </style>

</resources>