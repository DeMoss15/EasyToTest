<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeColorAccent">@color/colorAccent</item>
    </style>

    <style name="Blue">
        <item name="android:windowBackground">@color/colorBlueThemeWindowBackground</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="themeColorPrimary">@color/colorBlueThemePrimary</item>
        <item name="themeColorPrimaryDark">@color/colorBlueThemePrimaryDark</item>
        <item name="themeColorAccent">@color/colorBlueThemeAccent</item>
    </style>

    <style name="Red">
        <item name="android:windowBackground">@color/colorRedThemeWindowBackground</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="themeColorPrimary">@color/colorRedThemePrimary</item>
        <item name="themeColorPrimaryDark">@color/colorRedThemePrimaryDark</item>
        <item name="themeColorAccent">@color/colorRedThemeAccent</item>
    </style>

    <style name="Green">
        <item name="android:windowBackground">@color/colorGreenThemeWindowBackground</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="themeColorPrimary">@color/colorGreenThemePrimary</item>
        <item name="themeColorPrimaryDark">@color/colorGreenThemePrimaryDark</item>
        <item name="themeColorAccent">@color/colorGreenThemeAccent</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/base_24dp</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:color">@color/colorLightText</item>
    </style>

    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:color">@color/colorCommonText</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:color">@color/colorDarkText</item>
    </style>

    <style name="CommonButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">?themeColorAccent</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
    </style>

</resources>